# AWS Tech Guardrails & Compliance Platform
# Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_ORG_ID=o-xxxxxxxxxx
AWS_MGMT_ACCOUNT=123456789012
AWS_ASSUME_ROLE=GuardrailsComplianceRole
AWS_EXTERNAL_ID=
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=guardrails
DB_USER=guardrails_app
DB_PASSWORD=your-secure-password
DB_SSL_MODE=require
DB_POOL_SIZE=10

# =============================================================================
# Application Settings
# =============================================================================
# Options: development, staging, production
APP_ENV=development

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_AUTO_REMEDIATION=false
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_COST_ANOMALY=true
FEATURE_PREDICTIVE_COMPLIANCE=false
FEATURE_SLACK=true
FEATURE_JIRA=true
FEATURE_SERVICENOW=false
FEATURE_EXPORT_PDF=true
FEATURE_MULTI_REGION=true

# =============================================================================
# Slack Integration
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# =============================================================================
# PagerDuty Integration
# =============================================================================
PAGERDUTY_KEY=your-pagerduty-integration-key

# =============================================================================
# ServiceNow Integration
# =============================================================================
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USER=api_user
SERVICENOW_PASSWORD=your-password

# =============================================================================
# JIRA Integration
# =============================================================================
JIRA_URL=https://your-domain.atlassian.net
JIRA_USER=your-email@company.com
JIRA_API_TOKEN=your-api-token
JIRA_PROJECT_KEY=SEC

# =============================================================================
# Email/SMTP Configuration
# =============================================================================
SMTP_SERVER=smtp.company.com
SMTP_PORT=587
SMTP_USER=alerts@company.com
SMTP_PASSWORD=your-smtp-password

# =============================================================================
# Authentication (if using Streamlit Authenticator)
# =============================================================================
AUTH_SECRET_KEY=your-secret-key-for-jwt
AUTH_COOKIE_NAME=guardrails_auth
AUTH_COOKIE_EXPIRY_DAYS=30

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Cache Configuration
# =============================================================================
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000
